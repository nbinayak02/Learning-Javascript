<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home-URL Shortner</title>
    <style>
      body {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
      }
    </style>
  </head>

  <body>
    <h1>URL Shortener</h1>

    <div>
      <form action="/url" method="post">
        Enter URL to make it short:
        <input
          type="text"
          name="redirectUrl"
          placeholder="https://example.com"
        />
        <button>Generate</button>
      </form>
    </div>

    <% if(locals.urls){ %>
    <table border="1" cellpadding="10" cellspacing="5" style="margin-top: 10px;">
      <thead>
        <th>S.N</th>
        <th>Short ID</th>
        <th>Redirect URL</th>
        <th>Clicks</th>
      </thead>
      <tbody>
        <% urls.forEach( (url, index) => { %>
        <tr>
          <td><%= index+1 %></td>
          <td><a href="http://localhost:3000/<%= url.shortId %>"><%= url.shortId %></a></td>
          <td><%= url.redirectUrl %></td>
          <td><%= url.visitHistory.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  </body>
</html>
