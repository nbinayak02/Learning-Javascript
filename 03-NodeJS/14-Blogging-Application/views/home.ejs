<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
    <title>Homepage</title>
</head>

<body>
  <%- include("./partials/nav") %>

    <div class="container mt-4">
      <h2 class="m-3">All Blogs</h2>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
      <% blogs.forEach(blog=> { %>
        <div class="col">
          <div class="card h-100">
            <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">
                <%= blog.title %>
              </h5>
              <a href="/blogs/<%= blog._id %>" class="btn btn-primary mt-2">Read Blog</a>
            </div>
          </div>
        </div>
          <% }) %>
        </div>
      </div>
      
      <p class="mt-5"></p>
    <%- include("./partials/script") %>
</body>

</html>